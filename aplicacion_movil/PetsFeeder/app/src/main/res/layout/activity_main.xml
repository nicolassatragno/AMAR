<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="amar.petsfeeder.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Â¡Bienvenido, humano!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMain"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_marginTop="27dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp" />

        <Button
            android:text="Horarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMainTimeScheduler"
            android:textSize="18sp"
            android:onClick="openTimeSchedule"
            android:layout_below="@+id/textViewMain"
            android:layout_centerHorizontal="true" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="Alimentar ahora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMainAlimentar"
            android:layout_below="@+id/buttonMainIPConfig"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:onClick="alimentar" />

        <Button
            android:text="Configurar IP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMainIPConfig"
            android:layout_below="@+id/buttonMainHistory"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:onClick="openIPConfig"/>

        <Button
            android:text="Acerca de"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMainAbout"
            android:textSize="18sp"
            android:layout_below="@+id/buttonMainAlimentar"
            android:layout_centerHorizontal="true"
            android:onClick="openAbout" />

    </LinearLayout>

</RelativeLayout>
