<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="amar.petsfeeder.IPConfigActivity">

    <TextView
        android:text="Ingrese la IP del dispositivo al que desea conectarse."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="56dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <Button
        android:text="Â¡Ayuda!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:id="@+id/buttonIPAddressHelp"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/buttonIPAddressOK"
        android:layout_alignBottom="@+id/buttonIPAddressOK"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonIPAddressOK"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/checkBoxIPAddress"
        android:layout_alignStart="@+id/checkBoxIPAddress"
        android:onClick="onAceptar"
        android:layout_marginBottom="37dp" />

    <CheckBox
        android:text="Recordar esta IP."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxIPAddress"
        android:textSize="24sp"
        android:layout_alignLeft="@+id/editTextIPAddress"
        android:layout_alignStart="@+id/editTextIPAddress"
        android:layout_above="@+id/imageViewWorriedMaxJPG" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/worriedmax_120x120"
        android:id="@+id/imageViewWorriedMaxJPG"
        android:layout_above="@+id/buttonIPAddressHelp"
        android:layout_toRightOf="@+id/checkBoxIPAddress"
        android:layout_toEndOf="@+id/checkBoxIPAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewErrorIP"
        android:layout_marginTop="18dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextIPAddress"
        android:singleLine="false"
        android:textSize="24sp"
        android:layout_below="@+id/textViewErrorIP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:inputType="phone" />

</RelativeLayout>
