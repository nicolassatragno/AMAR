<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="amar.petsfeeder.IPConfigActivity">

    <TextView
        android:text="Ingrese la IP del dispositivo al que desea conectarse."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="56dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewErrorIP"
        android:layout_marginTop="18dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextIPAddress"
        android:singleLine="false"
        android:textSize="24sp"
        android:layout_below="@+id/textViewErrorIP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:inputType="phone" />

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonIPAddressOK"
        android:textSize="18sp"
        android:onClick="onAceptar"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editTextIPAddress"
        android:layout_alignEnd="@+id/editTextIPAddress" />

</RelativeLayout>
